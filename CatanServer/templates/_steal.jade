div(id='stealModal', class='modal fade', tabindex=-1, role='dialog', aria-labelledby='tradeLabel', aria-hidden=true)
    div(class='modal-dialog')
        div(class='modal-content')
            div(class='modal-header')
                button(type='button', class='close', data-dismiss='modal', aria-hidden=true) &times;
                h4(class='modal-title', id='tradeLabel') Steal
            div(class='modal-body',id='stealBody')
                for player in players
                    button(type='button', class='btn btn-default btn-steal', target=player.number, id='steal-'+player.name) #{player.name}