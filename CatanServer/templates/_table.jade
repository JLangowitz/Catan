table(class='table table-striped')
    tr
        th Player
        th Ore
        th Lumber
        th Brick
        th Sheep
        th Grain
        th Soldier
        th Monopoly
        th Year of Plenty
        th Road Building
        th VP Cards
        th Army Size
        th Points
        th Trade With:
    for player in game.players
        tr
            td #{player.name}
            td #{player.hand.ore}
            td #{player.hand.lumber}
            td #{player.hand.brick}
            td #{player.hand.sheep}
            td #{player.hand.grain}
            td #{player.devcards.Soldier}
            td #{player.devcards.Monopoly}
            td #{player.devcards['Year Of Plenty']}
            td #{player.devcards['Road Building']}
            td #{player.devcards['Victory Point']}
            td #{player.soldiers}
            td #{player.points}
            td
                button(class='btn btn-trade',id=player.number, data-toggle='modal', data-target='#trade') Trade
    tr
        td
        td
        td
        td
        td
        td
        td
            button(class='btn btn-play',id='playSoldier') Play
        td
            button(class='btn btn-play',id='playMonopoly') Play
        td
            button(class='btn btn-play',id='playYearOfPlenty') Play
        td
            button(class='btn btn-play',id='playRoadBuilding') Play
        td
            button(class='btn btn-play',id='playVictoryPoint') Play
        td
        td
        td