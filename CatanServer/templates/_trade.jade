div(id='trade', class='modal fade', tabindex=-1, role='dialog', aria-labelledby='tradeLabel', aria-hidden=true)
    div(class='modal-dialog')
        div(class='modal-content')
            div(class='modal-header')
                button(type='button', class='close', data-dismiss='modal', aria-hidden=true) &times;
                h4(class='modal-title', id='tradeLabel') Trade
            div(class='modal-body')
                form()
            div(class='modal-footer')
                button(type='button',id='tradeButton', class='btn btn-primary') Trade